<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="domain.Address" table="address">
        <id name="id" column="id">
            <generator class="native"/>
        </id>
        <property name="address" type="string" column="address"/>
        <property name="city" type="string" column="city"/>
        <property name="county" type="string" column="county"/>
        <property name="secondaryAddress" type="string" column="secondaryAddress"/>
        <property name="secondaryCity" type="string" column="secondaryCity"/>
        <property name="secondaryCounty" type="string" column="secondaryCounty"/>
        <many-to-one name="Donor" class="domain.Donor"
                     column="username" unique="true" not-null="true"
                     cascade="all" />
    </class>

</hibernate-mapping>
